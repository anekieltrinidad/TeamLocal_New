@{
    ViewData["Title"] = "Home Page";
}
<div class="carousel slide" id="carouselsample" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselsample" data-slide-to="0" class="active"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/carouselWelcome.png" class="d-block w-100 h-100" alt="first-slide">
        </div>
        <div class="carousel-item ">
            <img src="~/images/carousel1.png" class="d-block w-100 h-100" alt="second-slide">
        </div>
        <div class="carousel-item ">
            <img src="~/images/carousel2.png" class="d-block w-100 h-100" alt="third-slide">
        </div>
        <div class="carousel-item ">
            <img src="~/images/carousel3.png" class="d-block w-100 h-100" alt="forth-slide">
        </div>

    </div>
    <a href="#carouselsample" class="carousel carousel-control-prev" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a href="#carouselsample" class="carousel carousel-control-next" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
   
