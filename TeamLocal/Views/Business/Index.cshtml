@model IEnumerable<TeamLocal.Models.Business>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Businesses</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@foreach (var item in Model) {
    <div class="list-group-item">
        <div class="card">
            <div class="card-body">
                <div class="card-content">
                    <b class="card-title">
                        Business:
                        @Html.DisplayFor(modelItem => item.BusinessName)
                    </b>
                    <p class="card-text">
                        <b>Rate:</b>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </p>
                    <p>
                        <b>Address:</b>
                        @Html.DisplayFor(modelItem => item.BusinessAddress)
                    </p>
                    <p>
                        <b>Contact:</b>
                        @Html.DisplayFor(modelItem => item.ContactInfo)
                    </p>
                </div>
            </div>
                
            <div class="card-footer text-right">
                <button type="button" onclick="location.href='@Url.Action("Create", "Business")'"class="btn btn-warning btn-lg">More..</button>
            </div>
        </div>
   </div>
 
  
 
        
           
        
 }
 