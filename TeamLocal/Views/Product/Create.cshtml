@model TeamLocal.Models.Product
@inject TeamLocal.Data.ApplicationDbContext _context;

@{
    ViewData["Title"] = "Create";
    var businessList = _context.Businesses.ToList();

}

<h1 style="text-align: center;">Create Product</h1>

<hr />
<div class="row">
    <div class="col align-self-start"></div>
    <div class="col align-self-center">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Business" class="control-label"></label>
                <select asp-for="BusinessID" class="form-control"
                        asp-items="@(new SelectList(businessList, "BusinessID", "BusinessName"))" required>
                    <option value="">Choose from the following...</option>
                </select>
                <span asp-validation-for="Business" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <input type="button" class="btn btn-danger" value="Cancel" onclick="@("window.location.href='" + @Url.Action("Index", "Product") + "");" />
            </div>
        </form>
    </div>
    <div class="col align-self-end"></div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
